// Template CSS Files
link(href='/assets/css/style.css' rel='stylesheet')
link(href='/assets/css/user.css' rel='stylesheet')

// ======= Header =======
include parts/header.pug
// End Header

// ======= Main =======
.container
  .profile-header
    img.user-img(src=`${userData.img}` alt='profile pic')
    .user-text
      h4= userData.name
      span.main-status= userDataConverted.cleanStatuses[0]
      each val in userDataConverted.cleanStatuses.slice(1)
        span= val
    a#editBtn.edit-btn(href="/custom-card")
      i.fas.fa-user-edit  

  .cards
    div.card-side.card-front
      img.card-bg-0(src="/assets/img/kanafi.png", alt="cannabis")
      img.card-bg-1(src="/assets/img/card/newbg1.png", alt="cannabis")
      img.card-bg-2(src="/assets/img/card/newbg2.png", alt="cannabis statue")
      header.card-header
        h3= userData.name
        span= userDataConverted.cleanStatuses[0]
      main.card-main
        div.bedges
          - for(let i = 0; i < userDataConverted.convertedClasses.length; i++)
            img(src=`/assets/img/card/${userDataConverted.convertedClasses[i]}.png` alt='bedge')
        img.profile-img(src=`${userData.img}` alt='user')
      footer.card-footer
         h2 კანაფის მოყვარულთა საზოგადოება

    //- Card Back Side
    div.card-side.card-back
      img.card-bg-0(src="/assets/img/kanafi.png", alt="cannabis")
      img.card-bg-1(src="/assets/img/card/newbg1.png", alt="cannabis")
      img.card-bg-2(src="/assets/img/card/newbg2.png", alt="cannabis statue")
      header.card-header
        h3= userDataConverted.convertedName
        span= userDataConverted.convertedStatus
      main.card-main
        span DATE OF BIRTH
        h4= userData.birth_date

        span PERSONAL NUMBER
        h4= userData.id_number

        span CARD NUMBER
        h4= userData.card_number

        span DATE OF REGISTRATION
        h4= userData.registration

        img.qrcode-img(src='data:image/png;base64,')
      footer.card-footer
        h2 CANNABIS LOVERS SOCIETY
 
